{
    "properties": {
        "eventName": {
            "type": "string",
            "description": "Name of the sale or purchase event"
        },
        "eventReference": {
            "type": "object",
            "properties":{ 
                "id": {
                    "type": "string"
                },
                "scheme": {
                    "type": "string"
                }
            },
            "description": "Event Reference or Identification"
        },
        "vendor": {
            "type": "object",
            "$ref": "iscOrganistionType.json",
